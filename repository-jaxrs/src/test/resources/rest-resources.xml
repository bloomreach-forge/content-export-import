<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

  <import resource="classpath:/org/hippoecm/hst/site/optional/jaxrs/SpringComponentManager-rest-jackson.xml"/>

  <!-- ContentEximExportService bean - accessible by ID -->
  <bean id="contentEximExportService"
        class="org.onehippo.forge.content.exim.repository.jaxrs.ContentEximExportService">
  </bean>

  <!-- ContentEximImportService bean - accessible by ID -->
  <bean id="contentEximImportService"
        class="org.onehippo.forge.content.exim.repository.jaxrs.ContentEximImportService">
  </bean>

  <!-- JAX-RS REST Plain Resource Providers for Content EXIM Services -->
  <bean id="customRestPlainResourceProviders"
        class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
      <list>
        <bean class="org.apache.cxf.jaxrs.lifecycle.SingletonResourceProvider">
          <constructor-arg ref="contentEximExportService"/>
        </bean>
        <bean class="org.apache.cxf.jaxrs.lifecycle.SingletonResourceProvider">
          <constructor-arg ref="contentEximImportService"/>
        </bean>
      </list>
    </property>
  </bean>

</beans>
